<?xml version="1.0" encoding="UTF-8" ?>
<odoo>


    <record id="shopinvader_partner_view_form" model="ir.ui.view">
        <field name="model">shopinvader.partner</field>
        <field
            name="inherit_id"
            ref="shopinvader_v1_base.shopinvader_partner_view_form"
        />
        <field name="arch" type="xml">
            <xpath expr="backend_id" position="after">
               <field
                    name="company_id"
                    widget="selection"
                    groups="base.group_multi_company"
                />
            </xpath>
            <xpath expr="partner_email" position="before">
               <field name="external_id" />
            </xpath>
        </field>
    </record>


    <record id="shopinvader_partner_view_tree" model="ir.ui.view">
        <field name="model">shopinvader.partner</field>
        <field
            name="inherit_id"
            ref="shopinvader_v1_base.shopinvader_partner_view_tree"
        />
        <field name="arch" type="xml">
            <xpath expr="backend_id" position="after">
                <field name="external_id" />
            </xpath>
            <xpath expr="create_date" position="after">
                <field
                    name="company_id"
                    widget="selection"
                    groups="base.group_multi_company"
                    optional="show"
                />
             </xpath>
        </field>
    </record>

    <record id="shopinvader_partner_view_search" model="ir.ui.view">
        <field name="model">shopinvader.partner</field>
        <field
            name="inherit_id"
            ref="shopinvader_v1_base.shopinvader_partner_view_search"
        />
        <field name="arch" type="xml">
            <xpath expr="email" position="after">
                <field name="external_id" />
            </xpath>
            <xpath expr="parent_id" position="after">
                <field name="company_id" groups="base.group_multi_company" />
            </xpath>
        </field>
    </record>

</odoo>
